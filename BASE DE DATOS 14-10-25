SELECT FIRST_NAME, DEPARTMENT_NAME, E.DEPARTMENT_ID
FROM HR.EMPLOYEES E
INNER JOIN HR.DEPARTMENTS D
ON E.DEPARTMENT_ID = D.DEPARTMENT_ID;

SELECT FIRST_NAME, E.JOB_ID, JOB_TITLE
FROM HR.EMPLOYEES E
INNER JOIN HR.JOBS J
ON E.JOB_ID = J.JOB_ID;

SELECT FIRST_NAME, JOB_TITLE, START_DATE
FROM HR.EMPLOYEES E
INNER JOIN HR.JOBS J
    ON E.JOB_ID = J.JOB_ID
INNER JOIN HR.JOB_HISTORY
    ON E.EMPLOYEE_ID = HR.JOB_HISTORY.EMPLOYEE_ID;
    
SELECT DEPARTMENT_NAME, STREET_ADDRESS, CITY
FROM HR.DEPARTMENTS D
INNER JOIN HR.LOCATIONS L
    ON D.LOCATION_ID = L.LOCATION_ID;

--INNER JOIN: UNE INTERNAMENTE Y OMITE LOS QUE NO SE REPITAN ENTRE AMBAS TABLAS
--RIGHT JOIN: MUESTRA TODA LA DERECHA Y LOS ELEMENTOS CON LOS QUE SE RELACIONA DE LA IZQUIERDA

SELECT E.EMPLOYEE_ID,
E.FIRST_NAME||' '||LAST_NAME "NOMBRE COMPLETO",
D.DEPARTMENT_NAME
FROM HR.EMPLOYEES E
RIGHT JOIN HR.DEPARTMENTS D
    ON E.DEPARTMENT_ID = D.DEPARTMENT_ID
ORDER BY DEPARTMENT_NAME;

SELECT E.EMPLOYEE_ID,
E.FIRST_NAME||' '||LAST_NAME "NOMBRE COMPLETO",
D.DEPARTMENT_NAME
FROM HR.EMPLOYEES E
INNER JOIN HR.DEPARTMENTS D
    ON E.DEPARTMENT_ID = D.DEPARTMENT_ID
ORDER BY EMPLOYEE_ID;

SELECT E.EMPLOYEE_ID,
E.FIRST_NAME||' '||LAST_NAME "NOMBRE COMPLETO",
D.DEPARTMENT_NAME
FROM HR.EMPLOYEES E
LEFT JOIN HR.DEPARTMENTS D
    ON E.DEPARTMENT_ID = D.DEPARTMENT_ID
ORDER BY DEPARTMENT_NAME;

SELECT E.EMPLOYEE_ID,
E.FIRST_NAME||' '||LAST_NAME "NOMBRE COMPLETO",
D.DEPARTMENT_NAME
FROM HR.EMPLOYEES E
FULL OUTER JOIN HR.DEPARTMENTS D
    ON E.DEPARTMENT_ID = D.DEPARTMENT_ID
ORDER BY DEPARTMENT_NAME;

--(1)MUESTRA EL NOMBRE Y APELLIDO DEL EMPLEADO EN UNA COLUMNA, EL NOMBRE DEL DEPARTAMENTO AL QUE TRABAJO
-- Y QUE LOS EMPLEADOS TENGAN UN SUELDO MAYOR A 10.000, MUESTRA SUELDO FORMATEADO EN $999,999 (SIGNO PESO Y SEPARADOR DE MILES)
SELECT E.FIRST_NAME||' '||LAST_NAME "NOMBRE COMPLETO",
D.DEPARTMENT_NAME "DEPARTAMENTO",
TO_CHAR(E.SALARY,'$999,999') "SALARIO"
FROM HR.EMPLOYEES E
INNER JOIN HR.DEPARTMENTS D
    ON E.DEPARTMENT_ID = D.DEPARTMENT_ID
WHERE SALARY > 10000;

--(2) MUSTRA LOS EMPLEADOS QUE TENGAN UN SALARIO ENTRE 5000 Y 12000 JUNTO A SU CARGO

SELECT E.FIRST_NAME||' '||LAST_NAME "NOMBRE COMPLETO",
TO_CHAR(E.SALARY,'$999,999') "SALARIO",
J.JOB_TITLE "CARGO"
FROM HR.EMPLOYEES E
INNER JOIN HR.JOBS J
    ON E.JOB_ID = J.JOB_ID
WHERE SALARY BETWEEN 5000 AND 12000;

--(3) MUESTRA EL NOMBRE DEL DEPARTAMENTO Y LOS APELLIDOS DE LOS EMPLEADOS, INCLUYENDO LOS DEPARTAMENTOS SIN EMPLEADOS.
SELECT D.DEPARTMENT_NAME "DEPARTAMENTO",
E.LAST_NAME "APELLIDOS"
FROM HR.EMPLOYEES E
RIGHT JOIN HR.DEPARTMENTS D
    ON D.DEPARTMENT_ID = E.DEPARTMENT_ID;
    
--(4) MUESTRA EL NOMBRE Y APELLIDO DE LOS ESTUDIANTES CONCATENADO Y EN MINUSCULA JUNTO A SU CARGO Y SALARIO MAXIMO
SELECT LOWER (E.FIRST_NAME||' '||LAST_NAME) "NOMBRE COMPLETO",
J.JOB_TITLE "CARGO",
J.MAX_SALARY "SALARIO MAXIMO"
FROM HR.EMPLOYEES E
INNER JOIN HR.JOBS J 
    ON E.JOB_ID = J.JOB_ID;

--(5)MUESTRA TODOS LOS EMPLEADOS, SU SALARIO MULTIPLICADO POR SU COMISION Y EL NOMBRE DE DEPARTAMENTO
SELECT LOWER (E.FIRST_NAME||' '||LAST_NAME) "NOMBRE COMPLETO",
SALARY, (NVL(COMMISSION_PCT,0)* SALARY) COMMISION
FROM HR.EMPLOYEES E
INNER JOIN HR.DEPARTMENTS D
    ON E.DEPARTMENT_ID = E.DEPARTMENT_ID;

--(6) MUESTRA EL APELLIDO DE EMPLEADOS, NOMBRE DEL DEPARTAMENTO Y LA CIUDAD DONDE TRABAJA EN MAYUS.
