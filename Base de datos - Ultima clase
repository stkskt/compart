--CREA UN PROCEDIMIENTO QUE PERMITA INSERTAR DATOS EN LA TABLA OFICIOS
set serveroutput on;

describe oficios;
select * from oficios;

create or replace procedure insertoficios(
    p_tipo varchar2,
    p_desc varchar2)
as
begin
insert into oficios (tipo,descripcion)
values (p_tipo, p_desc);
end;

--CREA UN PROCEDIMIENTO QUE PERMITA ELIMINAR UN DATO DE LA TABLA EMPLEADOS ENTREGÁNDOLE EL ID
create or replace procedure borraremp(
    p_id number)
as
begin
    delete from empleados
    where id = p_id;
    
    if sql%rowcount = 0 then
        pl('No existe empleado con el id solicitado');
    else
        pl('Empleado eliminado correctamente');
    End if;
end;


select * from empleados























    
